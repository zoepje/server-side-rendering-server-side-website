<%- include('./partials/head') %>
<link rel="stylesheet" href="/styles/post.css">
<%- post.yoast_head %>
</head>

<body> 
<%- include('./partials/navigation') %>
<main>
  <article>
    <h1><%- post[0].title.rendered %></h1>

    <!-- Als er een object in media is laat de image zien -->
    <% if (media[0]) {%>
      <img src="<%= media[0].link %>" alt="<%= media[0].alt_text %>">
    <% } %>

    <div class="excerpt">
      <a href=""><%= post[0].categories %></a>
      <span><%- post[0].date_gmt %></span>
      <%- post[0].excerpt.rendered %>
    </div>

    <section class="content">
      <%- post[0].content.rendered %>
    </section>
  </article>
</main>


<%- include('./partials/foot') %>